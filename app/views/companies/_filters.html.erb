<%= form_tag filter_companies_path, method: "get", remote: true, id: "company_filters", style: "text-align:left", autocomplete: "off",  class: "filter_box col-xs-12 col-sm-8 col-sm-offset-2 col-md-8 col-md-offset-2" do |f| %>

  <div class="form-group">
    <%= label_tag 'filter_name', 'Name' %>
    <%= search_field_tag 'filter_name', params[:filter_name], id: "filter_results_name", class: "filter_results form-control" %>
  </div>

  <div class="form-group">
    <%= label_tag 'filter_status', 'Status'%>
    <%= search_field_tag 'filter_status', params[:filter_status], id: "filter_results_status", class: "filter_results form-control" %>
  </div>

  <%= label_tag 'filter_updated', 'Updated After' %>
  <div class="form-group">
    <div class="form-inline">
      <div class="form-group col-md-4 col-sm-4" style="padding-left:0px; padding-right:2px">
        <%= number_field_tag 'filter_updated_year', params[:filter_updated_year], min: 1, id: "filter_updated_year", class: "filter_results col-md-4 form-control", placeholder: "Year (YYYY)", style: "width:100%; margin-bottom:15px;" %>
      </div>
      <div class="form-group col-md-4 col-sm-4" style="padding-left:1px; padding-right:2px">
        <%= number_field_tag 'filter_updated_month', params[:filter_updated_month], min: 1, max: 12, id: "filter_updated_month", class: "filter_results col-md-4 form-control", placeholder: "Month (MM)", style: "width:100%; margin-bottom:15px;" %>
      </div>
      <div class="form-group col-md-4 col-sm-4" style="padding-left:1px; padding-right:0px">
        <%= number_field_tag 'filter_updated_day', params[:filter_updated_day], min: 1, max: 31, id: "filter_updated_day", class: "filter_results col-md-4 form-control", placeholder: "Day (DD)", style: "width:100%; margin-bottom:15px;" %>
      </div>
    </div>
  </div>

  <div class="form-group">
    <%= label_tag 'filter_location', 'Location'%>
    <%= search_field_tag 'filter_location', params[:filter_location], id: "filter_results_location", class: "filter_results form-control" %>
  </div>

  <%= label_tag 'filter_size_min', 'Size' %>
  <div class="form-group">
    <div class="form-inline">
      <div class="form-group col-md-6 col-sm-6" style="padding-left:0px; padding-right:2px">
        <%= number_field_tag 'filter_size_min', params[:filter_size_min], min: 1, max: 2147483647, id: "filter_results_size_min", class: "filter_results form-control", placeholder: "Minimum size", style: "width:100%" %>
      </div>
      <div class="form-group col-md-6 col-sm-6" style="padding-left:2px; padding-right:0px">
        <%= number_field_tag 'filter_size_max', params[:filter_size_max], min: 1, max: 2147483647, id: "filter_results_size_max", class: "filter_results form-control", placeholder: "Maximum size", style: "width:100%" %>
      </div>
    </div>
  </div>

  <%= link_to 'Clear Filters', 'javascript:void(0)', id: "clear_filters", class: "btn", style: "width:100%; margin-top:-10px" %><br/>

<% end %>
